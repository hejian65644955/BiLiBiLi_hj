<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_draw_pt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_category_t5"/>

        <TextView
            android:id="@+id/tv_draw_pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_draw_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画区"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:id="@+id/btn_lookin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:textColor="#ffffff"
            android:text="进去看看"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--1-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:id="@+id/iv_partition1"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="【伏地魔x林黛玉】手书--心术"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_see1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_collect1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


            </LinearLayout>

        </LinearLayout>


        <!--2-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:id="@+id/iv_partition2"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="【伏地魔x林黛玉】手书--心术"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_see2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_collect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--3-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:id="@+id/iv_partition3"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="【伏地魔x林黛玉】手书--心术"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_see3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_collect3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>

            </LinearLayout>

        </LinearLayout>


        <!--4-->
        <LinearLayout
            android:id="@+id/ll_four"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:id="@+id/iv_partition4"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tv_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="【伏地魔x林黛玉】手书--心术"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_see4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>


                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_collect4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.9万"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#33000000"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多动画"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_refresh"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1615条新动态，点击刷新"/>

    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_one"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_oneimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>