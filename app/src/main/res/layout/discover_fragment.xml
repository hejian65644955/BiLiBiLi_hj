    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:scrollbars="none"
                android:id="@+id/scrollview1"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    zhy:max_select="-1"/>

            </ScrollView>

            <ScrollView
                android:scrollbars="none"
                android:id="@+id/scrollview"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="250dp">

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    zhy:max_select="-1"/>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/ll_discover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="#22000000"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/iv_lookmore"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down_gray_round"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/btn_lookmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"/>
            </LinearLayout>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#22000000"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ic_quanzi_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ic_quanzi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_quanzi" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_quanzi"
            android:text="兴趣圈"
            android:textColor="#555555"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />


    <RelativeLayout
        android:id="@+id/topic_center_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ic_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_header_topic_center" />


        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_topic"
            android:text="话题中心"
            android:textColor="#555555"
            android:textSize="14sp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />


    <RelativeLayout
        android:id="@+id/activity_center_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ic_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_header_activity_center" />


        <TextView
            android:id="@+id/action_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_activity"
            android:text="活动中心"
            android:textColor="#555555"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_original"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ic_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_btn_rank_original" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_original"
            android:text="原创排行榜"
            android:textColor="#555555"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_gray_arrow_right" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />


    <RelativeLayout
        android:id="@+id/layout_all_rank"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ic_all_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_btn_rank_all" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_all_rank"
            android:text="全区排行榜"
            android:textColor="#555555"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_gray_arrow_right" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_game_center"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_game"
            android:text="游戏中心"
            android:textColor="#555555"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ic_game"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_btn_game"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />

</LinearLayout>